<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10sp"
    android:id="@+id/keInformasiPenawar"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15sp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/diminati_image"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:src="@drawable/jamtangan" />

            <TextView
                android:layout_toRightOf="@id/diminati_image"
                android:id="@+id/diminati_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penawaran Product"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5sp"/>

            <TextView
                android:layout_below="@id/diminati_status"
                android:layout_toRightOf="@id/diminati_image"
                android:id="@+id/diminati_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jam Tangan Casio"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_below="@id/diminati_product"
                android:layout_toRightOf="@id/diminati_image"
                android:id="@+id/diminati_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 250.000"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_below="@id/diminati_harga"
                android:layout_toRightOf="@id/diminati_image"
                android:id="@+id/diminati_tawar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ditawar Rp. 150.000"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="10sp"/>


        <TextView
            android:layout_margin="5dp"
            android:textSize="10sp"
            android:id="@+id/diminati_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2022-07-19T14:15:58.483Z" />

    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>