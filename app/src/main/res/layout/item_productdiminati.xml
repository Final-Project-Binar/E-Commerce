<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:id="@+id/keInformasiPenawar"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15sp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/diminati_image"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="0dp"
            android:src="@drawable/jamtangan"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/diminati_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5sp"
            android:layout_toEndOf="@id/diminati_image"
            android:text="Penawaran Product"
            android:textSize="10sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/diminati_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/diminati_status"
            android:layout_toEndOf="@id/diminati_image"
            android:text="Jam Tangan Casio"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/diminati_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/diminati_product"
            android:layout_toEndOf="@id/diminati_image"
            android:layout_marginStart="8dp"
            android:text="Rp. 250.000"
            android:textColor="@color/black"
            android:textSize="13sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/diminati_tawar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/diminati_harga"
            android:layout_marginBottom="10sp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/diminati_image"
            android:text="Ditawar Rp. 150.000"
            android:textColor="@color/black"
            android:textSize="13sp"
            tools:ignore="HardcodedText" />


        <TextView
            android:id="@+id/diminati_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="2022-07-19T14:15:58.483Z"
            android:textSize="10sp"
            tools:ignore="HardcodedText,SmallSp" />

    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>