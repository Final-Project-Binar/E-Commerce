<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10sp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="80sp"
        android:layout_height="80sp"
        app:cardCornerRadius="15sp">
        <ImageView
            android:id="@+id/diminati_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/jamtangan" />
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/diminati_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penawaran Product"
                android:textSize="12sp"
                android:layout_marginBottom="5sp"/>

            <TextView
                android:id="@+id/diminati_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jam Tangan Casio"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="5sp"/>

            <TextView
                android:id="@+id/diminati_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 250.000"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="10sp"/>

            <TextView
                android:id="@+id/diminati_tawar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ditawar Rp. 150.000"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="10sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/diminati_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28 April, 14.04"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>